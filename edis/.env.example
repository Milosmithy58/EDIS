# Server configuration
PORT=4000
NODE_ENV=development
# Admin & secrets configuration
ADMIN_TOKEN=replace-with-a-long-random-string
SECRETBOX_KEY=base64-encoded-32-byte-key
KEYS_STORE_PATH=./secrets/keys.enc
SCRAPE_SOURCES_PATH=./secrets/sources.enc

# Location + geocoder configuration
GEOCODER_PROVIDER=nominatim

# Feature toggles
ENABLE_OPENWEATHER=false
ENABLE_NEWSAPI=false

# API keys (fill in as needed)
# These act as optional seeds the first time the secure store is created.
WEATHER_PROVIDER=visualcrossing # default intent; fallback occurs if key absent
GNEWS_API_KEY=your-gnews-api-key
NEWSAPI_API_KEY=your-newsapi-api-key
OPENWEATHER_API_KEY=your-openweather-api-key
VISUALCROSSING_API_KEY=your-visualcrossing-api-key
MAPBOX_TOKEN=your-mapbox-token
VITE_MAPBOX_TOKEN=
FBI_CRIME_API_KEY=your-fbi-crime-api-key
WEBZIO_TOKEN=your-webzio-token # required when NEWS_PROVIDER=webzio (default)
NEWS_PROVIDER=webzio
WEBZ_API_KEY=your-webz-api-key
GDELT_BASE=https://api.gdeltproject.org/api/v2/doc/doc
CRIME_SOURCES=fbi,webz,newsapi,gdelt,crimemapping,spotcrime
